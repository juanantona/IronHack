<div class="panel panel-warning">
  
  <div class="panel-heading">
    <h3 class="panel-title">ENJOY THE MUSIC!</h3>
  </div>
  
  <div class="panel-body">
	  	
  	<div class="row">
	  	
	  	<div class="col-lg-6">
	        <a href=<%= concerts_path %> class="btn btn-default btn-lg btn-block">Concerts index</a>
	        <a href=<%= new_concert_path %> class="btn btn-default btn-lg btn-block">Add a new concert</a>
	    </div>

	    <div class="col-lg-6">
	    	<ul class="list-group">
	    	  <li class="list-group-item active">
			    <span class="badge"><%= @concerts.length %></span>
			      THIS MONTH
			  </li>
	    	  <% @concerts.each do |concert| %>	
	    	  	<a href=<%= concert_path(concert.id) %> class="list-group-item">
	    	  		<%= concert.band + " - " + concert.city + " - " + concert.date.to_s %></a>
			  <% end %>
			</ul>  
	     </div>

    </div>
 
  </div>   
  
</div>
